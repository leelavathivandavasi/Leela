<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory>

        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/bms</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root@123</property>
        <property name="hbm2ddl.auto">update</property>

        <!-- MySQL Dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Optional settings -->
        <property name="show_sql">true</property> <!--   this prints the sql stmts that executed by hibernate  -->
        <property name="format_sql">true</property> <!--   this formats the sql stmts that executed by hibernate     -->

        <mapping class="com.jspiders.Movie"/>
        <mapping class="com.jspiders.Audi"/>
        <mapping class="com.jspiders.AudiAddress"/>
<!--        <mapping class="com.jspiders.Shows"/>-->
<!--        <mapping class="com.jspiders.AudiProperties"/>-->
    </session-factory>

</hibernate-configuration>